generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model PowerUsage {
  id         String    @id @default(cuid())
  current_mA Float
  status     String
  timestamp  DateTime @default(now())
}

model dailyPowerUsage{
  id String @id @default(cuid())
  totalPowerUsage Float
  timestamp DateTime
}
